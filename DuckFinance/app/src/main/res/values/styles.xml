<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Title style-->
    <style name="title_style">
        <!--item name="android:layout_marginTop">@dimen/small_margin</item-->
        <item name="android:layout_marginBottom">@dimen/medium_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <!--ImageButton Style-->
    <style name="imagebutton_style">
        <item name="android:layout_margin">@dimen/ibtn_margin</item>
    </style>

    <!--LinearLayout Horizontal Margins-->
    <style name="home_linearlayout_horizontal">
        <item name="android:layout_marginLeft">@dimen/medium_margin</item>
        <item name="android:layout_marginRight">@dimen/medium_margin</item>
    </style>
    
    <!-- Transaction Date Text-->
    <style name="transaction_date_text">

        <item name="android:textSize">@dimen/transaction_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Transaction Description Text-->
    <style name="transaction_description_text">

        <item name="android:textSize">@dimen/transaction_text_size</item>
    </style>

    <!--Margin LinearLayout vertical 16dp-->
    <style name="linearlayout_margin_16dp">
        <item name="android:layout_margin">@dimen/medium_margin</item>
    </style>

    <!--Margin LinearLayout vertical 8dp-->
    <style name="linearlayout_margin_8dp">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <!--Text for spending names on Balance-->
    <style name="balance_spending_text">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="text_simple_14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>

    </style>

    <style name="text_bold_14sp">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/button_color</item>

    </style>

    <!--Dialog styles for recordAct-->

    <style name="transaction_dialog_image">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
    </style>

    <style name="transaction_dialog_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">28dp</item>
    </style>
    
</resources>
